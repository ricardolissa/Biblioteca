{% extends 'base.html.twig' %}

{% block body %}

<div class="container" align="center">
  <h1><B>AUTORES</B></h1> 
</div>
<br>
<div class="container" align="left">
  <h1>
    <a href="{{ path('autor_new') }}" class="badge badge-primary">Crear</a> 
  </h1>
</div>

<div class="container">  
  <div class="table-responsive">
    <table class=" table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Apodo</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {% for autor in autores %}
        <tr>
          <th scope="row"> 

            <a href=" {{ path('autor_show', {id:autor.id})}}">  {{ autor.nombre }} </a> 

          </th>
          <th scope="row">  {{autor.apellido}} </th>
          <th scope="row">  {{autor.apodo}} </th>
          <th scope="row"> 
           
                <a href="{{ path('autor_edit', { 'id': autor.id }) }}"><span class="badge badge-warning">Editar</span></a>
                          
          </th>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>


{% endblock %}
